generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  labId          Int      @unique
  email          String   @unique
  hashedPassword String
  name           String   @unique
  reports        Report[]
}

model Report {
  id        Int      @id @default(autoincrement())
  testId    Int
  title     String
  content   String   @db.Text
  createdAt DateTime @default(now())
  labId     Int
  user      User     @relation(fields: [labId], references: [labId])
}
